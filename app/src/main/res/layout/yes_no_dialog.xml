<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:background="@drawable/dialog_background">


        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"
            android:text="Are you sure?"
            android:textFontWeight="600"
            android:textAllCaps="true"
            android:textColor="#1A1443"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/messageTV1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/titleTv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="25dp"
            android:textAlignment="viewStart"
            android:text="All the details you have added to the group will be discarded"
            android:textFontWeight="600"
            android:textColor="#5F629B"
            android:textSize="15sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
          />

            <TextView
                android:id="@+id/yes_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/no_txt"
                app:layout_constraintTop_toBottomOf="@id/messageTV1"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Yes"
                android:fontFamily="sans-serif"
                android:textFontWeight="600"
                android:textAllCaps="true"
                android:textColor="#1A1443"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/no_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/messageTV1"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="18dp"
                android:text="No"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif"
                android:textFontWeight="600"
                android:textAllCaps="true"
                android:textColor="#1A1443"
                android:textSize="13sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
